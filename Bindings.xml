<Bindings>
    <Layer name="SI_KEYBINDINGS_LAYER_DIALOG" allowFallthrough="false">
        <Category name="SI_KEYBINDINGS_LAYER_DIALOG">
            <Action name="DIALOG_RIGHT_TRIGGER" hideAction="true" rebindable="true">
                <Down>ZO_Dialogs_ButtonKeybindPressed(keybind)</Down>
                <Up>ZO_Dialogs_ButtonKeybindReleased(keybind)</Up>
            </Action>
            <Action name="DIALOG_LEFT_TRIGGER" hideAction="true" rebindable="true">
                <Down>ZO_Dialogs_ButtonKeybindPressed(keybind)</Down>
                <Up>ZO_Dialogs_ButtonKeybindReleased(keybind)</Up>
            </Action>
        </Category>
    </Layer>
</Bindings>

